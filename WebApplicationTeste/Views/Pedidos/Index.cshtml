@model IEnumerable<CamadaModel.Pedidos>

@{
    ViewBag.Title = "Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pedidos</h2>

<p>
    @Html.ActionLink("Novo Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.Nome)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.UsuariosId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </th>
        <th>Visualizar Itens</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Clientes.Nome)
        </td>
  
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroPedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEntrega)
        </td>
        <td> 
            @Html.ActionLink("Itens", "Details", new { id=item.Id })  
        </td>
    </tr>
}

</table>
